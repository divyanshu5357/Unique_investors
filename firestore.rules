
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read-only access to the plots collection
    // This is for the public "Explore Property" page
    match /plots/{plotId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users (brokers/admins) can write
    }

    // Secure all other collections by default
    // They can only be accessed if other rules grant permission
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
